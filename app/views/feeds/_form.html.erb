<div class="container">
  <%= render 'shared/errors' %>
  </div class ="row justify-content-center">
    <div class="col-0">
    
    <%= form_with(model: feed,class: "shadow-none p-1 mb-1  rounded") do |form| %>
      
      <div class="form-group row justify-content-center text-muted">
        <%= form.label :username,class: "col-0 col-form-label text-dark" %>
        <div class ="col-7">
        <%= form.text_field :username,class: "form-control shadow rounded"%>
        </div>
      </div>

      <div class="form-group row justify-content-center text-muted">
        <%= form.label :description,class: "col-0 col-form-label text-dark" %>
        <div class ="col-7">
        <%= form.text_area :description,class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= form.submit class: "btn btn-outline-light btn-sm text-dark"%>
      </div>
    <% end %>
    <div class="form-group row justify-content-center">
        <%= link_to '[ Show ]', @feed ,class: "text-info"%> 
        <%= link_to '[ Back ] ', feeds_path,class: "text-info" %>
    </div>
  </div>
</div>